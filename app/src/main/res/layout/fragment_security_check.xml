<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:theme="@style/AppTheme.Dark"
    tools:context=".security.SecurityCheckFragment">

    <ImageView
        android:id="@+id/figure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/security_jail_broken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fig_security_check"/>

    <!-- Security items -->
    <include
        android:id="@+id/security_jail_broken"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_hook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_hook"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_virtual_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_virtual_app"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_emulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_emulator"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_mock_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_mock_location"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_ext_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_ext_storage"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_dev_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_dev_settings"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@+id/security_debugger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_debugger"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@id/security_adb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include
        android:id="@+id/security_adb"
        layout="@layout/list_item_security"
        app:layout_constraintBottom_toTopOf="@id/insecure_alert"
        android:layout_marginBottom="@dimen/spacer_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- Security items -->

    <TextView
        android:id="@+id/insecure_alert"
        app:layout_constraintBottom_toTopOf="@+id/ignore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacer_m"
        android:layout_marginEnd="@dimen/spacer_m"
        android:layout_marginBottom="@dimen/spacer_xs"
        android:text="@string/desc_security_device_insecure"
        android:textColor="@color/colorWarning"
        android:visibility="gone"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ignore"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/spacer_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_ignore"
        app:backgroundTint="@color/colorWarning"
        style="@style/Widget.MaterialComponents.Button"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>